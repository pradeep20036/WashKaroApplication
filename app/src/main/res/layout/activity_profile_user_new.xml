<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:background="#222831">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="173dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="160dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView27"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.338">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="220dp"
                android:layout_height="131dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_cough" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="0dp"
            android:layout_height="207dp"
            android:background="#00ADB5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="0dp"
            android:layout_height="181dp"
            android:background="#00ADB5"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="391dp"
            android:layout_height="465dp"
            android:layout_marginTop="105dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView26"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/bt_signout"
                android:layout_width="144dp"
                android:layout_height="47dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/quiz_round_button"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Sign Out"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_bloodgp"
                app:layout_constraintVertical_bias="0.367" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/full_guidline_view_roundcorner"
                android:ems="10"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:hint="Email "
                android:inputType="textEmailAddress"
                android:text="Email"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:background="@drawable/full_guidline_view_roundcorner"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="Pradeep Kumar"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.069" />

            <TextView
                android:id="@+id/tv_bloodgp"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/full_guidline_view_roundcorner"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="O+ve"
                android:textColor="#FFFFFF"
                android:textSize="20sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_email"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>