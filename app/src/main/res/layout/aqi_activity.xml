<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConsLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_effect"
    tools:context=".aqi_cough.aqi_activity"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"

            android:layout_marginBottom="5dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#FF085C"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/reset"
            android:textColor="#EDE9E9"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9C27B0">

                <TextView
                    android:id="@+id/headText"
                    android:layout_width="376dp"
                    android:layout_height="84dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/round_corner"
                    android:backgroundTint="#0C121212"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/aqi_hyperlocal_title"
                    android:textColor="#F6F2F2"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/round_corner"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="sans-serif-smallcaps"

                        android:text="@string/enter_age"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/ageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="15dp"
                        android:layout_toRightOf="@id/textView5"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="XX"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textColorHint="#80000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/round_corner"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/enter_gender"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/maleCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textView4"
                        android:fontFamily="sans-serif-smallcaps"

                        android:paddingHorizontal="10dp"
                        android:text="@string/male"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/femaleCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/maleCheck"
                        android:fontFamily="sans-serif-smallcaps"

                        android:paddingHorizontal="10dp"
                        android:text="@string/female"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <CheckBox
                        android:id="@+id/otherGenderCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/femaleCheck"

                        android:fontFamily="sans-serif-smallcaps"

                        android:paddingHorizontal="10dp"
                        android:text="@string/other"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/round_corner"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="sans-serif-smallcaps"

                        android:text="@string/enter_bmi"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/bmiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="15dp"
                        android:layout_toRightOf="@id/textView2"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="@string/enter_bmi_hint"
                        android:inputType="numberDecimal"
                        android:textColor="#000000"
                        android:textColorHint="#801E1703"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/round_corner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10dp"
                    android:text="@string/suffering_from"
                    android:textColor="#090000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/asthmaCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:includeFontPadding="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:text="@string/asthma"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/bronchitisCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_toRightOf="@id/asthmaCheck"
                            android:fontFamily="sans-serif-smallcaps"
                            android:includeFontPadding="true"
                            android:paddingHorizontal="5dp"
                            android:text="@string/bronchitis"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/pneumoniaCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/asthmaCheck"
                            android:layout_alignLeft="@id/asthmaCheck"
                            android:layout_marginVertical="5dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="sans-serif-smallcaps"
                            android:includeFontPadding="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="5dp"
                            android:text="@string/pneumonia"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/tbCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp"
                            android:layout_marginLeft="130dp"
                            android:layout_toRightOf="@id/bronchitisCheck"
                            android:fontFamily="sans-serif-smallcaps"
                            android:paddingHorizontal="5dp"
                            android:text="@string/tuberculosis"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/lungCancerCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/asthmaCheck"
                            android:layout_marginVertical="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@id/pneumoniaCheck"
                            android:fontFamily="sans-serif-smallcaps"
                            android:text="@string/lung_cancer"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/otherRespCheck"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/asthmaCheck"
                            android:layout_marginVertical="5dp"

                            android:layout_toRightOf="@id/lungCancerCheck"
                            android:fontFamily="sans-serif-smallcaps"
                            android:paddingHorizontal="5dp"
                            android:text="@string/other"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/round_corner"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="10dp"
                        android:text="@string/yesterday_aqi"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/avgAQI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="15dp"
                        android:layout_toRightOf="@id/textView8"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="10dp"
                        android:text="@string/unavailable"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/round_corner"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/aqi_prediction_today"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/aqiPredictText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toRightOf="@id/textView7"
                        android:hint="@string/aqi_hint"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:textColorHint="#801E1703"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:background="@drawable/round_corner"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="@string/data_collected_at"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dataCollectedAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toRightOf="@id/textView"
                        android:hint="@string/home_hospital"
                        android:inputType="textPersonName"
                        android:textColor="#000000"
                        android:textColorHint="#801E1703"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/geotagButton"
                android:layout_width="250dp"
                android:layout_height="62dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="20dp"
                android:background="#FF085C"
                android:backgroundTint="#FF085C"
                android:fontFamily="sans-serif-smallcaps"

                android:text="@string/geotagging"
                android:textAllCaps="false"
                android:textColor="#F3EBEB"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>