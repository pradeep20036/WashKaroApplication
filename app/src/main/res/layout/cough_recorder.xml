<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coughConsLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_effect"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="387dp"
        android:layout_height="93dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="16dp"
        android:background="#9C27B0"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="COUGH RECORDER"
        android:textColor="@color/app_white"
        android:textSize="36sp"
        app:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout1"
        app:layout_constraintTop_toBottomOf="@id/textView5"
        app:layout_constraintBottom_toTopOf="@id/linearLayout2">

        <Button
            android:id="@+id/recordButton1"
            android:layout_width="267dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:background="#472E2E"
            android:backgroundTint="#E91E63"
            android:fontFamily="sans-serif-smallcaps"
            android:text="RECORD"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            app:iconTint="#FFFFFF" />

        <Button
            android:id="@+id/stopButton1"
            android:layout_width="273dp"
            android:layout_height="67dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="#E60000"
            android:backgroundTint="#FF0057"
            android:backgroundTintMode="src_atop"
            android:fontFamily="sans-serif-smallcaps"
            android:text="STOP"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            app:icon="@drawable/stop"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1"
        app:layout_constraintBottom_toTopOf="@id/submitButton1">

        <Button
            android:id="@+id/playFileButton1"
            android:layout_width="252dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="#472E2E"
            android:backgroundTint="#E91E63"
            android:fontFamily="sans-serif-smallcaps"
            android:isScrollContainer="false"
            android:text="Play file"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            app:iconGravity="start"
            app:iconTintMode="src_in" />

        <Button
            android:id="@+id/stopFileButton1"
            android:layout_width="242dp"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="20dp"
            android:background="#472E2E"
            android:backgroundTint="#E91E63"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Stop File"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

    </LinearLayout>

    <Button
        android:id="@+id/submitButton1"
        android:layout_width="381dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/buttonback2"
        android:backgroundTint="#FF085C"
        android:fontFamily="sans-serif-smallcaps"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>