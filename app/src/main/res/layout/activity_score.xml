<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_effect"
    >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="410dp"
        android:layout_height="334dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="32dp"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="410dp"
            android:layout_height="128dp"
            android:layout_margin="20dp"
            android:background="#9C27B0"
            android:fontFamily="@font/mukta_semibold"
            android:gravity="center"
            android:padding="5dp"
            android:text="SCORE"
            android:textColor="@color/app_white"
            android:textSize="50sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/sa_score"
            android:layout_width="277dp"
            android:layout_height="132dp"
            android:layout_margin="20dp"
            android:background="#F2FFAC07"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="5 / 10"
            android:textColor="@color/app_white"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button_view_solutions"
        android:layout_width="308dp"
        android:layout_height="93dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="#FF085C"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Check Solutions"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.315" />

    <Button
        android:id="@+id/sa_done"
        android:layout_width="305dp"
        android:layout_height="89dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="#FF085C"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Done"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_view_solutions" />
</androidx.constraintlayout.widget.ConstraintLayout>