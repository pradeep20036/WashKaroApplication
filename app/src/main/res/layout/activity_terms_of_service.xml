<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#222831">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/full_guideview_heading_content"
                android:fontFamily="@font/mukta_semibold"
                android:gravity="center"
                android:padding="5dp"
                android:text="Terms and Condition"
                android:textColor="@color/app_black"
                android:textSize="@dimen/about_title"
                app:layout_constraintBottom_toTopOf="@id/detailed_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="395dp"
            android:layout_height="717dp"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context="com.android_examples.com.textviewhtmldisplay.MainActivity">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="72dp"
                android:background="@drawable/full_guideview_heading_content"
                android:fontFamily="@font/opensans_regular"
                android:padding="24dp"
                android:text="@string/term_and_cond"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/agree"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="47dp"
                android:layout_marginEnd="50dp"
                android:layout_alignBottom="@id/textView1"
                android:layout_marginBottom="30dp"
                android:layout_toStartOf="@+id/disagree"
                android:background="@drawable/full_guidline_lastrow"
                android:clickable="true"
                android:gravity="center"
                android:padding="16dp"
                android:text="Agree"
                android:textColor="@color/app_white"

                android:textSize="24sp" />

            <TextView
                android:id="@+id/disagree"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="47dp"
                android:layout_alignBottom="@id/textView1"
                android:layout_marginBottom="30dp"
                android:background="@drawable/full_guidline_lastrow"
                android:clickable="true"
                android:gravity="center"
                android:padding="16dp"
                android:text="Disagree"
                android:textColor="@color/app_white"
                android:textSize="24sp" />


        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>