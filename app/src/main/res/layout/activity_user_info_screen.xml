<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#222831"
    android:gravity="center"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/firstHeadText"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp"
            android:background="#393E46"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingVertical="20dp"
            android:editable="false"
            android:text="User Details"
            android:textColor="@color/app_white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <EditText
            android:id="@+id/userNameTF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:fontFamily="sans-serif-smallcaps"
            android:clickable="false"
            android:editable="false"
            android:textColor="#EEEEEE"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <EditText
            android:id="@+id/userRollTF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:fontFamily="sans-serif-smallcaps"
            android:clickable="false"
            android:editable="false"
            android:textColor="#EEEEEE"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <EditText
            android:id="@+id/userBranchTF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:fontFamily="sans-serif-smallcaps"
            android:clickable="false"
            android:editable="false"
            android:textColor="#EEEEEE"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:paddingBottom="15dp">

        <Button
            android:id="@+id/submitChangeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"

            android:background="@drawable/full_guidline_lastrow"
            android:text="GO BACK"
            android:padding="10dp"
            android:textColor="@color/app_white"
            android:textSize="24sp"
            app:backgroundTint="#00ADB5" />
    </RelativeLayout>


</LinearLayout>