<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".quiz.Time_Up">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/timeUpText"
            android:layout_width="310dp"
            android:layout_height="85dp"
            android:background="#393E46"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="Time Up"
            android:textColor="#FFF0F0"
            android:textSize="50sp"
            fbutton:layout_constraintBottom_toTopOf="@+id/imageView"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.496"
            fbutton:layout_constraintStart_toStartOf="parent"
            fbutton:layout_constraintTop_toTopOf="parent"
            fbutton:layout_constraintVertical_bias="0.376" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="290dp"
            android:layout_height="209dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="242dp"
            android:layout_marginEnd="100dp"
            android:src="@drawable/ic_time"
            fbutton:layout_constraintBottom_toTopOf="@+id/playAgainButton"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.408"
            fbutton:layout_constraintStart_toStartOf="parent"
            fbutton:layout_constraintTop_toTopOf="@+id/view"
            fbutton:layout_constraintVertical_bias="0.0"
            fbutton:srcCompat="@drawable/time_up_ic_new" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fbutton:layout_constraintBottom_toBottomOf="parent"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.0"
            fbutton:layout_constraintStart_toStartOf="parent"
            fbutton:layout_constraintTop_toTopOf="parent"
            fbutton:layout_constraintVertical_bias="0.0"></View>

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="247dp"
            android:layout_height="81dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="104dp"
            android:backgroundTint="#00ADB5"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Play Again"
            android:textSize="30sp"
            fbutton:layout_constraintBottom_toBottomOf="parent"
            fbutton:layout_constraintEnd_toEndOf="parent"
            fbutton:layout_constraintHorizontal_bias="0.416"
            fbutton:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
