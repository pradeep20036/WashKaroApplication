<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/leftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/left_background"
        android:elevation="2dp"
        android:fontFamily="@font/mukta_medium"
        android:padding="@dimen/chat_padding"
        android:text="12345"
        android:textColor="@color/chat_other"
        android:textSize="@dimen/chat_font_size" />

    <TextView
        android:id="@+id/rightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:text="12345"
        android:textSize="@dimen/chat_font_size"
        android:fontFamily="@font/mukta_medium"
        android:background="@drawable/right_background"
        android:textColor="@color/chat_me"
        android:padding="@dimen/chat_padding"
        android:elevation="2dp"/>

</RelativeLayout>